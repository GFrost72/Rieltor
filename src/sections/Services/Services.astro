---
import "./services.style.scss";

const serviceListSold = [
	'Юридическая консультация',
	'Оценка рыночной стоимости',
	'Профессиональная фото-съёмка квартиры',
	'Реклама',
	'Поиск покупателя',
	'Сопровождение сделки',
];

const serviceListBuy = [
	'Юридическая консультация',
	'Одобрение ипотеки',
	'Поиск квартиры/дома',
	'Сопровождение сделки',
	'Страхование ипотеки',
	'Консультация',
]

const serviceListNewBuilding = [
	'Подбор квартиры в новостройке',
	'Одобрение ипотеки',
	'Только проверенные застройщики',
	'Дистанционная сделка',
	'Помощь в приёме квартиры',
]
---

<script src="@utils/modal.js"></script>
<script src="@utils/formAJAX.js"></script>
<script src="@utils/validator.js"></script>

<section class="services">
	<div class="container">
		<div class="services__top">
			<span class="services__top-desc">МОИ ПРЕИМУЩЕСТВА</span>
			<h2 class="services__top-title">УСЛУГИ И СТОИМОСТЬ</h2>
		</div>
		<div class="services__bot">

				<div id="myModal" class="modal">
				<!-- Modal content -->
				<div class="modal-content">
				  <span class="close">&times;</span>
				  <form id="submitForm" action="sendmail.php" method="post">
					<label class="label-form" for="name">Имя</label>
					<input type="text" id="name" name="name" placeholder="Ваше имя">
					<div class="error-message" id="name-error"></div>
					
					<label class="label-form" for="phone">Телефон</label>
					<input type="text" id="phone" name="phone" placeholder="Ваш телефон">
					<div class="error-message" id="phone-error"></div>
					<input type="hidden" id="serviceType" name="serviceType">
					<input type="submit" value="Оставить заявку">
					<p class="form-text">Оставляя данные формы вы соглашаетесь с <a class="privacy-policy-link"  href="/privacypolicy">политикой конфиденциальности</a></p>
				</form>
				</div>
			  </div>
			
			<article class="services__bot-article">
				<h3 class="services__bot-article-title">ПРОДАЖА</h3>
				<ul class="services__bot-article-list">
					{
						serviceListSold.map((serviceTitle) => (
							<li class="services__bot-article-item ">{ serviceTitle }</li>
						))
					}
				</ul>
				<span
					class="services__bot-article-desc"
					<span
					class="services__bot-article-desc"
				>
					<span class="accent">37 000 руб.</span> + <span
						class="accent">1%</span
					> от стоимости объекта недвижимости</span
				>
				<button id="callOrderBtn-1" class="article-arrow" data-service-type="продажа">
				 </button>
				  


			</article>
			<article class="services__bot-article">
				<h3 class="services__bot-article-title">ПОКУПКА</h3>
				<ul class="services__bot-article-list">
					{
						serviceListBuy.map((serviceTitle) => (
							<li class="services__bot-article-item ">{ serviceTitle }</li>
						))
					}
				</ul>
				<span class="services__bot-article-desc">
				<span class="accent">30 000 руб.</span> + <span class="accent">1%</span> от стоимости объекта недвижимости</span>
				<button id="callOrderBtn-2" class="article-arrow" data-service-type="покупка"></button>
				</article>

			<article class="services__bot-article">
				<h3 class="services__bot-article-title">НОВОСТРОЙКИ</h3>
				<ul class="services__bot-article-list">
					{
						serviceListNewBuilding.map((serviceTitle) => (
							<li class="services__bot-article-item article-item__bottom">{ serviceTitle }</li>
						))
					}
				</ul>
				<span class="services__bot-article-desc accent free-size">БЕСПЛАТНО</span>
				<button id="callOrderBtn-3" class="article-arrow" data-service-type="новостройка"></button>
			</article>
		</div>
		<div class="center-container">
			<button class="services-btn"><a href="/prices" class="services__arrow-link">Все услуги</a></button>
		</div>
	</div>
</section>



